{namespace mm=Beech\Ehrm\ViewHelpers}


<div class="row-fluid absence">
	<table class="absence-table">
		<tr>
			<th rowspan="2">Employee</th>
			{{#each date in dates}}
				<th>{{date date 'D-M'}}</th>
			{{/each}}
		</tr>
		<tr>
			{{#each date in dates}}
				<th>{{date date 'dd'}}</th>
			{{/each}}
		</tr>

		{{#each employee in department.employees}}
			<tr>
				<td>
					{{#linkTo "BeechPartyPerson.show" employee.id}}{{employee.name.fullName}}{{/linkTo}}
				</td>
				{{#each date in dates}}
					<td>{{absenceOfEmployee controllers.BeechAbsenceAbsences.absences employee date}}</td>
				{{/each}}
			</tr>
		{{/each}}

	</table>
	<div class="controls">
		<button class="btn next pull-right" {{action 'next'}}>Next</button>
		<button class="btn prev" {{action 'prev'}}>Prev</button>
	</div>
</div>
