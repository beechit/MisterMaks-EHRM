{namespace mm=Beech\Ehrm\ViewHelpers}

<div class="row-fluid">
	<div class="span9">
		<f:translate id="Department:" package="Beech.Absence">Department:</f:translate>

			{{view Ember.Select viewName="select"
				contentBinding="controllers.BeechAbsenceAbsences.departments"
				id="department"
				optionLabelPath="content.name"
				optionValuePath="content.id"
				prompt="<f:translate id="selectDepartment" package="Beech.Absence">- select a department -</f:translate>"
				selectionBinding="department"
			}}

	</div>
</div>

{{outlet}}
