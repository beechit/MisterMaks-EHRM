<?xml version="1.0"?>
<phpunit strict="true"
		bootstrap="../buildessentials/PhpUnit/UnitTestBootstrap.php"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true">
	<testsuites>
		<testsuite name="All tests">
			<directory>../../Packages/Application/*/Tests/PHP/Unit/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="false">
			<directory>../../Packages/Application/*/Classes</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="junit" target="../Reports/UnitTests.xml" logIncompleteSkipped="false"/>
	</logging>
</phpunit>
